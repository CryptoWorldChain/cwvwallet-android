<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#292a2a"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_add_address_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/add_address_cancel" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="添加联系人"
        android:textColor="@color/white"
        android:textSize="15.3sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.5dp"
        android:layout_marginTop="33.5dp"
        android:text="姓名"
        android:textColor="#999"
        android:textSize="13.4sp" />

    <EditText
        android:id="@+id/edit_add_address_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.5dp"
        android:layout_marginTop="7.7dp"
        android:layout_marginRight="38.7dp"
        android:background="@null"
        android:textColor="@color/white"
        android:textSize="15.3sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="28.5dp"
        android:layout_marginRight="38.7dp"
        android:background="#999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.5dp"
        android:layout_marginTop="16.6dp"
        android:text="地址"
        android:textColor="#999"
        android:textSize="13.4sp" />

    <EditText
        android:id="@+id/edit_add_address_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.5dp"
        android:layout_marginTop="7.7dp"
        android:layout_marginRight="38.7dp"
        android:background="@null"
        android:textColor="@color/white"
        android:textSize="11.5sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="28.5dp"
        android:layout_marginRight="38.7dp"
        android:background="#999" />

    <TextView
        android:id="@+id/tv_address_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="42dp"
        android:layout_marginRight="38.2dp"
        android:layout_marginBottom="27.6dp"
        android:text="确认"
        android:textColor="@color/gold"
        android:textSize="15.3sp" />

</LinearLayout>
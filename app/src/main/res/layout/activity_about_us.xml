<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010101"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:src="@drawable/about_us_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="CWV Wallet"
        android:textColor="#fff"
        android:textSize="13.4sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="11.5dp"
        android:layout_marginTop="46dp"
        android:background="#161616" />

    <fanrong.cwvwalled.ui.view.LSettingItem
        android:id="@+id/setting_item_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        leon:LtextColor="#fff"
        leon:LtextSize="13.4"
        leon:isShowRightText="true"
        leon:leftText="版本更新"
        leon:rightText="当前为最新版本"
        leon:rightTextColor="#999"
        leon:rightTextSize="13.4" />


</LinearLayout>
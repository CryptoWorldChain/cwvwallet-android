<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010101"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:src="@drawable/about_us_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:text="CWV Wallet"
        android:textColor="#fff"
        android:textSize="13.4sp" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="V1.0"
        android:textColor="#999"
        android:textSize="13.4sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="11.5dp"
        android:layout_marginTop="46dp"
        android:background="#161616" />


    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_left_icon"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="版本更新"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />


        <RelativeLayout
            android:id="@+id/right_layout"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="26.7dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26.6dp"
            android:gravity="center"
            android:text="当前为最新版本"
            android:textColor="#999999"
            android:textSize="12sp" />

    </RelativeLayout>


</LinearLayout>